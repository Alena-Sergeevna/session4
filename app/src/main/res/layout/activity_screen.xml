<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    android:background="@drawable/mybgcolor"
    tools:context=".Screen"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:text="Sign in"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="64dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_logo" />

        <Button
            android:id="@+id/sign_in"
            android:layout_width="66dp"
            android:layout_height="31dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="#009688"
            android:keyboardNavigationCluster="false"
            android:text="Sign in"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/profil"
            android:layout_width="66dp"
            android:layout_height="31dp"
            android:layout_gravity="bottom|right"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="#009688"
            android:keyboardNavigationCluster="false"
            android:text="Профиль"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/registr"
            android:layout_width="66dp"
            android:layout_height="31dp"
            android:layout_gravity="bottom|end"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="110dp"
            android:background="#00009688"
            android:keyboardNavigationCluster="false"
            android:onClick="onClick"
            android:text="Registr"
            android:textSize="12sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            style="@android:style/Widget.EditText"
            android:layout_width="176dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:autoText="false"
            android:autofillHints="emailAddress"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:textColor="#000000"
            android:textColorHint="#040404"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="175dp"
            android:layout_height="32dp"
            android:layout_marginVertical="110dp"
            android:autofillHints="password"
            android:ems="10"
            android:inputType="textVisiblePassword|textPassword"
            android:selectAllOnFocus="true"
            android:textColor="#000000"
            android:textColorHint="#040404"
            android:textSize="14sp"
            android:typeface="sans" />

    </FrameLayout>
</androidx.wear.widget.BoxInsetLayout>